{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}